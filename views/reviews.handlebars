{{> navbar user}}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron">
                <h4 class="display-6 text-center animate__animated animate__fadeInDown">Reviews</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
                {{#each posts}}
                <div class="forum-post-card card text-white bg-primary mb-3">
                    <div class="card-header">
                        <h4 class="text-white float-left"><a href="/articles/{{id}}">{{title}}</a></h4>
                        <h4 class ="tect-white float-right">{{rating}} / 10</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-center">{{body}}</p>
                        <p class="float-right">by {{'User.email'}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>