{{> navbar user}}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron">
                <h4 class="display-6 text-center">Reviews</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
                {{#each posts}}
                <div class="forum-post-card card text-white bg-primary mb-3">
                    <div class="card-header">
                        <h4 class="text-white">{{title}}</h4>
                        <h4 class ="tect-white">{{rating}} / 10</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{body}}</p>
                        by {{'User.email'}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>