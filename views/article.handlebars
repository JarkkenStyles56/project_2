{{> navbar user }}

<div class="container">
    <div class="row">
        <div class="col-md">
            {{#with post}}
            <div class="jumbotron">
                <h4 class="display-6 text-center">{{title}} </h4>

            </div>

            <div id="forum-posts">
                <div class="forum-post-card card text-white bg-primary mb-3">
                    <div class="card-body">
                        
                        <p class="card-text">{{body}}</p>
                        by {{'User.email'}}
                    </div>
                </div>
                {{/with}}
            </div>



            {{#if comments.length }}
            <div class="col-sm" >
                {{#each comments}}
                <div class="forum-post-card card text-white bg-primary mb-3">
                    <div class="card-body">
                        <p class="card-text">{{commentText}}</p>
                        by {{'User.email'}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}











            <div class="row">
                <div class="col-md">
                    <form class="forum-post">

                        <div class="container mt-4 mb-4">
                            <div class="row justify-content-md-center">
                                <div class="col-md-12 col-lg-8">
                                    <h1 class="h2 mb-4">Submit a comment</h1>
                                    <label>What did you think?</label>
                                    <div class="form-group">
                                        <textarea id="editor"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>